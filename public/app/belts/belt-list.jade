.container.top-padding-med
    .pull-right
        form.form-inline
            .form-group
                input.form-control(ng-model="searchText", placeholder="Search" )
            .form-group.margin-left-med
                select.form-control(ng-model="sortOrder", ng-options="item.value as item.text for item in sortOptions")
    table.table.table-hover.table-striped.table-condensed
        thead
            tr
                th Color
                th ID
        tbody
            tr(ng-repeat="belt in belts | filter:searchText | orderBy:sortOrder ")
                td
                    a(href="/belts/{{belt._id}}") {{belt.color}}
                td {{belt.id}}